@model IssueTracker.Models.Issue

<h1 style="color: #1c9954!important">Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-6 m-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-1">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class ="form-control" asp-items="Html.GetEnumSelectList<IssuePriority>()"></select>
            </div>
            <div class="form-group m-1">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="form-group m-1">
                <label asp-for="TargetResolutionDate" class="control-label">Target resolution date</label>
                <input asp-for="TargetResolutionDate" class="form-control" />
                <span asp-validation-for="TargetResolutionDate" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="height: 20vh" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-action="Index"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to Issues</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
