<!-- Modal -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete">Delete comment</h5>
        <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form asp-action="DeleteComment">
            <div class="form-group text-start comment">
                <p class="text-break">Are you sure you want to delete your comment?</p>
                <input name="id" id="commentId" hidden>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                </div>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>