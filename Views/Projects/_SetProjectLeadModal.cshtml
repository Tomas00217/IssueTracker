<!-- Modal -->
<div class="modal fade" id="projectLead" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="projectLead">Set project lead</h5>
        <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form asp-action="SetProjectLead">
            <div class="form-group">
                <label class="control-label">Pick User</label>
                <input name="email" class="form-control" list="datalistOptions" placeholder="Type to search...">
                <datalist id="datalistOptions">
                    @foreach (var user in ViewBag.ProjectUsers)
                    {
                        <option value="@user.Email"/>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <input type="submit" value="SetProjectLead" class="btn btn-primary" />
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>