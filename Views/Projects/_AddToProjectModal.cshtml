<!-- Modal -->
<div class="modal fade" id="inviteUser" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inviteUser">Invite developer</h5>
        <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form asp-action="InviteDeveloper">
            <div class="form-group text-start">
                <label class="control-label">Pick User</label>
                <input name="email" class="form-control" list="datalistInviteUser" placeholder="Type to search..." autocomplete="off">
                <input name="projectId" value="@Model.Project.ProjectId" hidden>
                <datalist id="datalistInviteUser">
                    @foreach (var user in Model.allUsers)
                    {
                        <option value="@user.Email"/>
                    }
                </datalist>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <div class="form-group">
                    <input type="submit" value="Invite User" class="btn btn-primary" />
                </div>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>