@model IssueTracker.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: #1c9954!important">Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-1">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="StartDate" class="control-label">Start date</label>
                <input min="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="TargetEndDate" class="control-label">Target end date</label>
                <input min="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="TargetEndDate" class="form-control" />
                <span asp-validation-for="TargetEndDate" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-action="Index"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to Projects</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
