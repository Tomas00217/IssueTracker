@model IssueTracker.Models.Person;

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #1c9954!important"> Edit Profile </h1>

<hr />
<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonId" />
            <div class="form-group m-1">
                <label asp-for="FirstName" class="control-label">First name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="SecondName" class="control-label">Second name</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>        
            <div class="form-group m-1">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#delete" data-bs-accId="@Model?.PersonId">Delete</button>
            </div>
        </form>
        <partial name="_DeleteAccountModal"></partial>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-action="Profile"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    var exampleModal = document.getElementById('delete')
    exampleModal.addEventListener('show.bs.modal', function (event) {
    var button = event.relatedTarget

    var id = button.getAttribute('data-bs-accId')

    var modalBodyInput = exampleModal.querySelector('.acc input')
    
    modalBodyInput.value = id
    })
</script>